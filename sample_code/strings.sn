// strings and chars:
x : string = "hello";
y : string = "bye";
z : string = x + y;
print "Chars of string: ", z, "\n";
for (mut i := 0; i < 8; i = i + 1) {
  print "  z[", i, "] -> ", z[i], "\n";
}
free z;

a : string = "hello";
h : u8 = a[0];
e : u8 = 'e';
l : u8 = a[2];
o : u8 = a[4];

print h, ": ", h - 104, "\n";
print e, ": ", e - 101, "\n";
print l, ": ", l - 108, "\n";
print l, ": ", l - 108, "\n";
print o, ": ", o - 111, "\n";

three : u8 = '3' - '0';
print three, "\n";
