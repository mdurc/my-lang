func foo(x: i32) {}

// Function ptr:
p_foo : func(i32)->u0 = foo;

foo(1);
p_foo(2);

// Address Of
mut x : i64 = 3;
mut px : ptr<imm i64> = &x; // mutable pointer to immutable reference to i32
mut py : ptr<mut i64> = &mut x; // mutable pointer to mutable reference to i32

// Accessing
*py = 15;
px = null;
px = &x;

// Ptr Allocation:
mut pz : ptr<imm i64>;
pz = new<mut i64>[3];
pz[0] = 30;
pz[1] = 60;
pz[2] = 90;
free[] pz;

pz = null;
pz = new<imm i64>(32);
free pz;
